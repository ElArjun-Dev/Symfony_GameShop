{# on doit récupérer le base  #}
{% extends 'base.html.twig' %}
{# on peut redifinir le titre de la page #}
{% block title %}Liste des jeux
{% endblock %}
{# On ouvre le bloxk body #}

{% block body %}

	<div class="d-flex flex-wrap col-sm-10 mx-auto mt-5 justify-content-center border rounded p-5">
		<div class="col-3">
			<img src="/images/games/{{game.imagePath}}" class="img-fluid" alt="{{game.title}}" style="height: 25rem;">
		</div>
		<div class="col-4">
			<h2 class="text-decoration-underline text-center my-4">{{game.title}}</h2>

			{# on recupere la liste des consoles ( attention il est a l'envers, la seconde valeur et notre elements) #}
			{% for console in consoles %}
				<span class="badge bg-primary m-2">{{console.label}}</span>
			{% endfor %}

			<p>{{game.description}}</p>
			<p class="fw-bold fs-3">{{game.price != 0 ? (game.price/100)|number_format(2, ',', ' ') ~ ' €' : 'Gratuit'}}</p>
			<div class="d-flex justify-content-around">
				<p>note média:
					{{game.mediaNote}}</p>
				<p>note utilisateur:
					{{game.userNote}}</p>
			</div>
			<div class="d-flex m-4 justify-content-center">
				<img src="/images/pegi/{{game.imgPegi}}" class="img-fluid me-2" alt="{{game.title}}" style="height: 2rem;">
				<p>
					Age:{{ game.label}}
					+</p>
			</div>
		</div>
		
	</div>


{% endblock body %}
