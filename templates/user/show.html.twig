{% extends 'base.html.twig' %}

{% block title %}Profi utilisateur{% endblock %}

{% block body %}
    <h1 class="my-5">User</h1>

<div class="card p-4 text-center">
<h4>{{ user.email }}</h4>

<div class="d-flex justify-content-center align-items-center my-5 fs-5">
    <ul >
        {% for role in user.roles %}
            {% if role == 'ROLE_ADMIN' %}
                <li class="badge rounded-pill bg-primary">Admin</li>
            {% elseif role == 'ROLE_USER' %}
                <li class="badge rounded-pill bg-secondary">User</li>
            {% else %}
                <li class="badge rounded-pill bg-warning">Guest</li>
            {% endif %}
        {% endfor %}
    </ul>

</div>
    <a class="btn btn-success m-2" href="{{ path('app_user_edit', {'id': user.id}) }}">modifier</a>

</div>


    <div class="d-flex justify-content-center mt-4 flex-column">
        <a class="btn btn-primary m-2 " href="{{ path('app_user_index') }}">Retour a la liste</a>
        <div class='btn btn-danger'>{{ include('user/_delete_form.html.twig') }}</div>
    </div>
{% endblock %}
